<a href="{% spaceless %}
    {% if extension ==  'directory' %}
        {{ path('claro_desktop_open_tool', {'toolName': 'resource_manager'}) }}#resources/{{ node.getId() }}
    {% else %}
        {{ path('claro_resource_open', {'resourceType': node.getResourceType().getName(), 'node' : node.getId()}) }}
    {% endif%}"
    {% if openInNewTab == true %}
        target="_blank"
    {% endif %}
{% endspaceless %}>{{ node.getName() }}</a>
