{% extends 'ClarolineCoreBundle:Workspace:layout.html.twig' %}

{% block title %}{{ parent() ~ ' - ' ~ "competence" | trans({}, "tools") | striptags | raw }}{% endblock %}
{% block breadcrumb %}
    {{
        macros.workspaceBreadcrumbs(
            workspace,
            [
                {
                    'name': 'registration_to_competence'|trans({}, 'competence'),
                    'href': path('claro_workspace_competences', {'workspace': workspace.getId()})
                },
            ]
        )
    }}
{% endblock %}
{% block section_content %}
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'learning_profil'|trans({}, 'platform') }}</h3>
    </div>
        <div class="panel-body">
        {% render controller("ClarolineCoreBundle:Tool\\CompetenceTool:menuTab",{"workspace":workspace.getId()}) %}
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-condensed">
                <thead>
                    <th> {{'competence'|trans({},'platform') }} </th>
                    <th> {{'score'|trans({},'platform') }} </th>
                </thead>
                {% for u in list %}
                    <tr>
                        <td> {{u.getCompetence().getName()}}</td> 
                        <td> {{u.getScore()}}</td> 
                    </tr>
                    {% endfor %}
                </table>
             </div>
        </div>
{% endblock %}