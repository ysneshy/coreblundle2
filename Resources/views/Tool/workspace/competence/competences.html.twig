{% extends "ClarolineCoreBundle:Workspace:layout.html.twig" %}
{% block title %}{{ 'competence_referencial' | trans({}, 'platform') | striptags | raw }}{% endblock %}
{% block breadcrumb %}
    {#  COMPLETE THE BREADCRUMB #}
{% endblock %}
{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            {% render controller("ClarolineCoreBundle:Tool\\CompetenceTool:menuTab",{"workspace":workspace.getId()}) %}
            <h3 class="panel-title">{{ "competence_referencial" | trans({}, "platform" )}}</h3>
        </div>
        <div class="panel-body">
        	<div id="tree">
	        	<ul class="nav nav-pills nav-stacked">
				{% for c in cpt %}
				  <li class="roots">
				    <a href="{{path('claro_workspace_competence_show_referential',{'competence':c.id,'workspace':workspace.getId()})}}">
				     {{c.name}}
				    </a>
				  </li>
				{% endfor %}	
				</ul>
			</div>
        </div>
        <div class="panel-footer">
        	<button id="show-add-form" class="btn btn-primary" data-href="{{path('claro_workspace_competence_form',{'workspace':workspace.getId()}) }}">{{'add'|trans({},'platform')}}</button>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
 {{ parent() }}
	<script type='text/javascript'src='{{ asset('bundles/clarolinecore/js/administration/competences.js') }}'></script>
{% endblock %}