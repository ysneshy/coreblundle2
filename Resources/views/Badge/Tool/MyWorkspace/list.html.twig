{% extends 'ClarolineCoreBundle:Badge/Tool:Workspace/layout.html.twig' %}

{% trans_default_domain "badge" %}

{% block title %}{{ parent() ~ ' - ' ~ workspace.name ~ ' - ' ~ 'badges' | trans | striptags }}{% endblock %}

{% block breadcrumb %}
    {{
        macros.workspaceBreadcrumbs(
            workspace,
            [
                {
                    'name': 'my_badges'|trans({}, 'badge'),
                    'href': ''
                }
            ]
        )
    }}
{% endblock %}

{% block section_title %}
    {{ 'my_badges'|trans({}, 'badge') }}
{% endblock %}

{% block section_body %}
    {{ render(controller('ClarolineCoreBundle:Badge/Tool/Badge:myWorkspaceBadge', {'workspace': workspace, 'loggedUser': user, 'badgePage': badgePage})) }}
{% endblock %}